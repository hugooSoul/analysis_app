<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<div>
  <% @post.files.each do |file| %>
    <p><%= link_to file.filename, rails_blob_path(file, disposition: :attachment) %></p>
  <% end %>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
